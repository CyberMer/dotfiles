{
    "layer": "top",
    "position": "top", 
    "mod": "dock",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "height": 50,
    "modules-left": ["custom/power","clock","custom/weather","hyprland/workspaces"],
    "modules-center": ["wlr/taskbar"],
    "modules-right": ["network", "bluetooth", "temperature","cpu","memory","battery","backlight","pulseaudio","pulseaudio#microphone","tray","custom/notification"],
    
    "hyprland/window": {
        "format": "{}"
    },
    
    "wlr/taskbar": {
        "format": "{icon}",
        "all-outputs": true,
        "icon-size": 16,
        "on-click": "activate",     
        "on-click-middle": "close",
        "on-click-right": "minimize-raise",
        "ignore-list": ["Alacritty"]
    },
    
    "hyprland/workspaces": {
        "format": "{name}: {icon}",
        "format-icons": {
            "1": ">_",
            "2": "üï∏",
            "3": "„ÄÉ",
            "4": "‚ô´",
            "5": "‚úâÔ∏é",
            "active": "*",
            "default": "1"
        },
        "persistent-workspaces": {
            "*": 5,
            "HDMI-A-1": 3
        }
    },

    "custom/notification": {
        "format": "Û∞Çö {}",
        "return-type": "json",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
        "escape": true
    }, 

    "custom/launcher": {
        "format": "Û∞£á",
        "on-click": "~/.config/waybar/scripts/launch-apps.sh",
        "on-click-right": "alacritty",
        "tooltip": "Left: App Launcher | Right: Terminal"
    },

    "custom/power": {
        "format": "Û∞ê•",
        "on-click": "wlogout",
        "on-click-right": "systemctl poweroff",
        "tooltip": false
    },

    "custom/weather": {
        "tooltip": true,
        "format": "{}",
        "interval": 30,
        "exec": "~/.config/waybar/scripts/waybar-wttr.py",
        "return-type": "json"
    },

    "tray": {
        "icon-size": 18,
        "spacing": 10
    },

    "clock": {
        "format": "{:%d/%m/%Y %H:%M}",
        "tooltip-format": "<tt><small>{calendar}</small></tt>"
    },

    "backlight": {
        "device": "intel_backlight",
        "format": "{icon} {percent}%",
        "format-icons": ["Û∞Éû", "Û∞Éü", "Û∞É†"],
        "on-scroll-up": "brightnessctl set 5%+",
        "on-scroll-down": "brightnessctl set 5%-",
        "min-length": 6
    },

    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-charging": " {capacity}%",
        "format-plugged": " {capacity}%",
        "format-alt": "{time} {icon}",
        "format-critical": "Û∞Çé {capacity}%",
        "format-warning": "Û∞Å∫ {capacity}%",
        "format-icons": ["Û∞Çé", "Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"],
        "on-click": "notify-send 'Battery Status' 'Battery: {capacity}% - {time} remaining'",
        "on-update": "bash -c 'if [ $(cat /sys/class/power_supply/BAT*/capacity) -le 15 ]; then notify-send -u critical \"Low Battery\" \"Battery is at $(cat /sys/class/power_supply/BAT*/capacity)%. Please connect charger!\"; fi'",
        "tooltip-format": "Battery: {capacity}% - {time} remaining\nHealth: {health}%"
    },

    "pulseaudio": {
        "format": "{icon} {volume}%",
        "tooltip": false,
        "format-muted": "Û∞∏à Muted",
        "on-click": "pamixer -t",
        "on-scroll-up": "pamixer -i 5",
        "on-scroll-down": "pamixer -d 5",
        "scroll-step": 5,
        "format-icons": {
            "headphone": "Û∞ãã",
            "hands-free": "Û∞ãé",
            "headset": "Û∞ãé",
            "phone": "Û∞è≤",
            "portable": "Û∞è≤",
            "car": "Û∞Ñã",
            "default": ["Û∞ïø", "Û∞ñÄ", "Û∞ïæ"]
        }
    },

    "pulseaudio#microphone": {
        "format": "{format_source}",
        "format-source": "Û∞ç¨ {volume}%",
        "format-source-muted": "Û∞ç≠ Muted",
        "on-click": "pamixer --default-source -t",
        "on-scroll-up": "pamixer --default-source -i 5",
        "on-scroll-down": "pamixer --default-source -d 5",
        "scroll-step": 5
    },
    
    "temperature": {
        "thermal-zone": 1,
        "format": "Û∞èà {temperatureC}¬∞C",
        "critical-threshold": 38,
        "format-critical": "Û∞∏Å {temperatureC}¬∞C"
    },

    "cpu": {
        "format": "Û∞çõ {usage}%",
        "tooltip": false,
        "interval": 1
    },

    "memory": {
        "format": "Û∞òö {}%",
        "tooltip-format": "{used:0.1f}G used of {total:0.1f}G",
        "interval": 5
    },

    "network": {
        "format-wifi": "Û∞ñ© {signalStrength}%",
        "format-ethernet": "Û∞àÅ {ipaddr}/{cidr}",
        "tooltip-format": "{essid} - {ifname} via {gwaddr}",
        "format-linked": "Û∞àÅ {ifname} (No IP)",
        "format-disconnected": "Û∞ñ™ Disconnected",
        "format-alt": "{ifname}:{essid} {ipaddr}/{cidr}"
    },

    "bluetooth": {
        "format": "Û∞ÇØ {status}",
        "format-disabled": "Û∞Ç≤",
        "format-connected": "Û∞Ç± {num_connections}",
        "format-off": "Û∞Ç≤",
        "tooltip-format": "{device_alias}",
        "tooltip-format-connected": " {device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}",
        "on-click": "bluetoothctl show | grep Powered | grep yes && bluetoothctl power off || (bluetoothctl power on ) "
    }
}
